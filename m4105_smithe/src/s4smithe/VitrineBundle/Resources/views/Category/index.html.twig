{% set namePage = "Catégorie" %}
{% set typePage = namePage %}
{% extends "s4smitheVitrineBundle::layoutBackOffice.html.twig" %}

{% block linkFollowing %}
	<li class="active" >Categories</li >
{% endblock %}

{% block content %}
	<div class="col-xs-12" >
		<table class="table table-responsive tableCustum" >
			<tr >
				<th >Nom</th >
				<th class="text-center qte" >ID</th >
				<th class="actionItem" ></th >
			</tr >
			{% set nbCat = 0 %}
			{% for category in categories %}
				{% set nbCat = nbCat + 1 %}
				<tr >
					<td >
						<div class="col-xs-12" >
							{{ category.name }}
						</div >
					</td >
					<td class="text-center" >
						<a href="{{ path('category_show', { 'id': category.id }) }}" >{{ category.id }}</a >
					</td >
					<td class="text-center actionItem" >
						<a href="{{ path('category_show', { 'id': category.id }) }}" class="badge badge-blue" title="Détail" ><span class="fa fa-search" ></span ></a >
						<a href="{{ path('category_edit', { 'id': category.id }) }}" class="badge badge-blue" title="Editer" ><span class="fa fa-pencil" ></span ></a >
					</td >
				</tr >
			{% endfor %}
			<tr >
				<td colspan="3" ><span class="text-small" >{{ nbCat }} catégorie(s)</span ></td >
			</tr >
		</table >


		<a href="{{ path('category_new') }}" title="Retour à la liste" class="btn btn-primary btn-sm" >Créer une catégorie</a >
	</div >
{% endblock %}
