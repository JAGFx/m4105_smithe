{% extends "s4smitheVitrineBundle::layout.html.twig" %}

{% block linkFollowing %}
	<li><a href="{{ path('s4smithe_vitrine_catalogue') }}">Categorie</a></li>
	<li >{{ categorie.name }}</li>
{% endblock %}

{% block categoriesList %}
	{% for cat in categories %}
		<a href="{{ path('s4smithe_vitrine_articlesParCategorie', {catId: cat.id}) }}" class="list-group-item">{{ cat.name }}</a>
	{% endfor %}
{% endblock %}

