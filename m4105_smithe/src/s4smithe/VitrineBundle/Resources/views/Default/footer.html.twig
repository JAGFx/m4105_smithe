{% block footer %}
	<footer>
		<!--Footer Content-->
		<div class="container">
			<div class="row">
				<!--First column-->
				<div class="col-md-3 collumn">
					<h4 >{{ sfNameShop }}</h4 >
					<p>
						<img class="img-responsive" style="margin: auto;" src="{{ asset('bundles/s4smithevitrine/images/sfshop.jpg') }}" alt="{{ sfNameShop }}" />
					</p>
				</div>
				<!--/.First column-->

				<!--Second column-->
				<div class="col-md-3 collumn">
					<h4>Sitemap</h4>
					<ul>
						<li><a href="{{ path('s4smithe_vitrine_homepage') }}">Accueil</a></li>
						<li><a href="{{ path('s4smithe_vitrine_mentions') }}">Mentions</a></li>
						<li><a href="{{ path('s4smithe_vitrine_catalogue') }}">Catalogue</a></li>
					</ul>
				</div>
				<!--/.Second column-->

				<!--Third column-->
				<div class="col-md-3 collumn">
					<h4>Catégories</h4>
					<ul>
						{{ render( controller('s4smitheVitrineBundle:Category:listeCategorieFooter') ) }}
					</ul>
				</div>
				<!--/.Third column-->
				
				<!--Third column-->
				<div class="col-md-3 collumn">
					<h4>Marques populaire</h4>
					<ul>
						{{ render( controller('s4smitheVitrineBundle:Marque:listeMarqueFooter') ) }}
					</ul>
				</div>
				<!--/.Third column-->
			</div>
		</div>
		<!--/.Footer Content-->

		<!--Coprytights-->
		<div class="container text-center copyright">
			&copy; 2016 <a href="{{ path('s4smithe_vitrine_homepage') }}" > {{ sfNameShop }} </a >
		</div>
		<!--/.Coprytights-->
	</footer>
{% endblock %}
