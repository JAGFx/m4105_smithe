{% set namePage = marque.name %}
{% set typePage = namePage %}
{% extends "s4smitheVitrineBundle::layoutBackOffice.html.twig" %}

{% block linkFollowing %}
	<li class="active" >Marques</li >
	<li >{{ marque.name }}</li >
{% endblock %}

{% block content %}
	<div class="col-xs-12" >
		<table class="table table-responsive tableCustum" >
			<tr >
				<th >Nom</th >
				<th class="text-center qte" >ID</th >
				<th class="actionItem" ></th >
			</tr >
			<tr >
				<td >
					<div class="col-xs-12" >
						{{ marque.name }}
					</div >
				</td >
				<td class="text-center" >{{ marque.id }}</td >
				<td class="text-center actionItem" >
					<a href="{{ path('marque_edit', { 'id': marque.id }) }}" class="badge badge-blue" title="Editer" ><span class="fa fa-pencil" ></span ></a >
					{{ form_start(delete_form, { 'attr': {'class': 'form-inline visible-lg-inline'} }) }}
					<button type="submit" title="Supprimer" class="badge badge-blue" >
						<span class="fa fa-times" ></span ></button >
					{{ form_end(delete_form) }}
				</td >
			</tr >
		</table >

		<a href="{{ path('marque_index') }}" title="Retour à la liste" class="btn btn-sm btn-default" >Retour</a >
	</div >
{% endblock %}

